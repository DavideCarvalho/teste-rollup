{
  "name": "hybrids",
  "version": "1.4.1",
  "description": "UI library for creating Web Components",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "jsnext:main": "esm/index.js",
  "author": "Dominik Luba≈Ñski <dominik.lubanski@gmail.com>",
  "repository": "https://github.com/hybridsjs/hybrids",
  "scripts": {
    "dev": "karma start",
    "dev:coverage": "rm -rf ./coverage && NODE_ENV=coverage npm run dev",
    "test": "karma start --single-run",
    "test:coverage": "rm -rf ./coverage && NODE_ENV=coverage npm run test -- --browsers ChromeHeadless",
    "coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls",
    "build": "npm run build:cjs && npm run build:esm && npm run build:dist",
    "build:cjs": "rm -rf ./lib && NODE_ENV=cjs babel ./src -d ./lib -s inline",
    "build:esm": "rm -rf ./esm && babel ./src -d ./esm -s inline",
    "build:dist": "rm -rf ./dist && webpack",
    "release": "npm run test && npm run build && standard-version"
  },
  "keywords": [
    "web components",
    "custom elements",
    "shadow dom"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-istanbul": "^5.1.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "jasmine-core": "^3.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "standard-version": "^4.4.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.2.1",
    "@webcomponents/shadycss": "^1.5.2",
    "@webcomponents/shadydom": "^1.2.0",
    "@webcomponents/template": "^1.4.0",
    "@webcomponents/webcomponents-platform": "^1.0.0",
    "core-js": "^2.5.7"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "rules": {
      "no-debugger": 0,
      "no-param-reassign": 0,
      "no-new-func": 0,
      "no-loop-func": 0,
      "new-cap": 0,
      "prefer-destructuring": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "test/**/*.js"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ],
    "env": {
      "cjs": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      },
      "coverage": {
        "plugins": [
          [
            "babel-plugin-istanbul",
            {
              "include": [
                "src/**/*.js"
              ]
            }
          ]
        ]
      }
    }
  }
}
